{
  "name": "Luffa",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Luffa",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "devtools_page": "devtool.html",
  "permissions": [
    "background",
    "debugger",
    "storage",
    "webRequest",
    "http://*/",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Luffa",
    "default_popup": "popup.html"
  }
}
